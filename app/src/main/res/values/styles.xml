<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParamName">
        <item name="android:textColor">@color/colorWhiteGrey</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ParamValue">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NumberPickerText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="MenuItemTitleText" parent="ParamValue">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditTextTitle" parent="ParamValue">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorWhiteGrey</item>
    </style>

    <style name="UrlEditText">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@drawable/ic_settings_toggle</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="buttonTint">@color/colorWhite</item>
    </style>

    <style name="CheckBoxTitle" parent="MenuItemTitleText">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ParametersFrameStyle">
        <item name="android:layout_width">375dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="background">@drawable/bg_parameters_frame</item>
    </style>

    <style name="SeparateLineHorizontal">
        <item name="android:layout_width">375dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/bg_separate_lines</item>
    </style>

    <style name="SeparateLineVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">127dp</item>
        <item name="android:background">@drawable/bg_separate_lines</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>
